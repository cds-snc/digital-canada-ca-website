{{- $.Scratch.Add "pagesIndex" slice -}}
{{- range $index, $page := .Site.Pages -}}
  {{- if eq $page.Type "blog" -}}
  

    {{- if gt (len $page.Content) 0 -}}
    {{- $pageData := (dict "title" $page.Title  "href" $page.RelPermalink "description" $page.Params.description "type" $page.Type "date" $page.Params.date "archived" $page.Params.archived "translationKey" $page.Params.translationKey "author" $page.Params.author "image" $page.Params.image "thumb" $page.Params.thumb "category" $page.Params.category "content" ($page.Content | plainify)) -}}
    {{- $.Scratch.Add "pagesIndex" $pageData -}}
    
      
    {{- end -}}
  {{- end -}}  
  
{{- end -}}
{{- $.Scratch.Get "pagesIndex" | jsonify -}}
